#!/bin/bash --posix
#
#  This script is copied from the original scala script to be able to use
#  the exit function in order to make sure that the terminal is working properly 
#  on exit
#
##############################################################################
# Copyright 2002-2011, LAMP/EPFL
#
# This is free software; see the distribution for copying conditions.
# There is NO warranty; not even for MERCHANTABILITY or FITNESS FOR A
# PARTICULAR PURPOSE.
##############################################################################

# Not sure what the right default is here: trying nonzero.
scala_exit_status=127
saved_stty=""

# restore stty settings (echo in particular)
function restoreSttySettings() {
  if [[ -n $SCALA_RUNNER_DEBUG ]]; then
    echo "restoring stty: $saved_stty"
  fi
    
  stty $saved_stty
  saved_stty=""
}

function onExit() {
  if [[ "$saved_stty" != "" ]]; then
    restoreSttySettings
  fi
  exit $scala_exit_status
}

# to reenable echo if we are interrupted before completing.
trap onExit INT

# save terminal settings
saved_stty=$(stty -g 2>/dev/null)
# clear on error so we don't later try to restore them
if [[ ! $? ]]; then  
  saved_stty=""
fi
if [[ -n $SCALA_RUNNER_DEBUG ]]; then
  echo "saved stty: $saved_stty"
fi

java -cp /Users/etorreborre/projects/scoobi/target/scala-2.9.2/classes:/Users/etorreborre/.ivy2/cache/org.fusesource.jansi/jars/jansi-1.4.jar:/Users/etorreborre/.ivy2/cache/org.apache.hadoop/hadoop-client/jars/hadoop-client-2.0.0-mr1-cdh4.0.1.jar:/Users/etorreborre/.ivy2/cache/org.apache.hadoop/hadoop-common/jars/hadoop-common-2.0.0-cdh4.0.1.jar:/Users/etorreborre/.ivy2/cache/com.google.guava/guava/jars/guava-11.0.2.jar:/Users/etorreborre/.ivy2/cache/com.google.code.findbugs/jsr305/jars/jsr305-1.3.9.jar:/Users/etorreborre/.ivy2/cache/org.apache.commons/commons-math/jars/commons-math-2.1.jar:/Users/etorreborre/.ivy2/cache/xmlenc/xmlenc/jars/xmlenc-0.52.jar:/Users/etorreborre/.ivy2/cache/commons-codec/commons-codec/jars/commons-codec-1.4.jar:/Users/etorreborre/.ivy2/cache/commons-net/commons-net/jars/commons-net-3.1.jar:/Users/etorreborre/.ivy2/cache/commons-io/commons-io/jars/commons-io-2.1.jar:/Users/etorreborre/.ivy2/cache/asm/asm/jars/asm-3.2.jar:/Users/etorreborre/.ivy2/cache/commons-el/commons-el/jars/commons-el-1.0.jar:/Users/etorreborre/.ivy2/cache/commons-logging/commons-logging/jars/commons-logging-1.1.1.jar:/Users/etorreborre/.ivy2/cache/log4j/log4j/bundles/log4j-1.2.16.jar:/Users/etorreborre/.ivy2/cache/commons-lang/commons-lang/jars/commons-lang-2.5.jar:/Users/etorreborre/.ivy2/cache/commons-collections/commons-collections/jars/commons-collections-3.2.1.jar:/Users/etorreborre/.ivy2/cache/commons-configuration/commons-configuration/jars/commons-configuration-1.6.jar:/Users/etorreborre/.ivy2/cache/commons-digester/commons-digester/jars/commons-digester-1.8.jar:/Users/etorreborre/.ivy2/cache/commons-beanutils/commons-beanutils/jars/commons-beanutils-1.7.0.jar:/Users/etorreborre/.ivy2/cache/commons-beanutils/commons-beanutils-core/jars/commons-beanutils-core-1.8.0.jar:/Users/etorreborre/.ivy2/cache/org.slf4j/slf4j-log4j12/jars/slf4j-log4j12-1.6.1.jar:/Users/etorreborre/.ivy2/cache/oro/oro/jars/oro-2.0.8.jar:/Users/etorreborre/.ivy2/cache/org.codehaus.jackson/